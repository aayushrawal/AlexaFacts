const handlers = {
 'LaunchRequest': function () {
   this.emit(':ask', 'Hello, would you like a fun fact?', 'Would you like a fun fact?'); },
 DeliverFact: function () {
   this.emit('GetFact');
 },
 'GetFact': function () {
   const factIndex = Math.floor(Math.random() * RandomFunFacts.length);
   const randomFact = RandomFunFacts [factIndex];
   const anotherFact = 'Would you like another fact?';
   this.emit(':ask', `${randomFact}, ${anotherFact}`, anotherFact);
 },
 'AMAZON.HelpIntent': function () {
   const helpMessage = 'You can ask me for a random fact';
   this.emit(':ask', helpMessage, helpMessage);
 },
 'AMAZON.YesIntent': function () {
   this.emit('GetFact');
 },
 'AMAZON.NoIntent': function () {
   this.emit(':tell', 'Goodbye');
 },
 'AMAZON.CancelIntent': function () {
   this.emit(':tell', 'Goodbye');
 },
 'AMAZON.StopIntent': function () {
   this.emit(':tell', 'Goodbye');
 },
 'SessionEndedRequest': function () {
   this.emit(':tell', 'Goodbye');
 }
};
exports.handler = (event, context) => {
  const alexa = Alexa.handler(event, context);
  alexa.registerHandlers(handlers);
  alexa.execute();
};
